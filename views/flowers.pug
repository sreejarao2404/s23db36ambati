extends layout

block content
  h1= title
   - let  flowers=results;
   div(class="container-fluid")
    div(class="row")
      each item,index in flowers
        div(class="col-sm-2",onClick=`buy(${index})`)
          p name is #{item.flower_name}
          p color is #{item.flower_color}
          p size is #{item.flower_size}
          

  //- Bonus Logic
  script.
    function buy(itr) {
      itr = itr+1;
      alert(`You Purchased Item ${itr}`);
    }